    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "express-validator": "^7.3.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7"
  },
